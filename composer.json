{
  "name": "shrikeh/symfony-api-context",
  "description": "Contexts for Symfony apps in shrikeh ADR style",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "Barney Hanlon",
      "email": "symfony@shrikeh.net"
    }
  ],
  "require": {
    "nyholm/psr7": "^1.8",
    "pimple/pimple": "^3.5",
    "psr/container": "^2.0",
    "psr/http-message": "^2.0",
    "shrikeh/common-app": "@dev",
    "symfony/config": "^7.2",
    "symfony/console": "^7.2",
    "symfony/dependency-injection": "^7.2",
    "symfony/framework-bundle": "^7.2",
    "symfony/http-kernel": "^7.2",
    "symfony/yaml": "^7.2"
  },
  "require-dev": {
    "shrikeh/teapot": "^3.0",
    "shrikeh/testing-metapackage": "^0.4.0",
    "shrikeh/php-coding-bible": ">=0.2.0",
    "symfony/dotenv": "^7.2",
    "symfony/flex": "^2.4",
    "symfony/psr-http-message-bridge": "^7.2",
    "symfony/runtime": "^7.2",
    "symfony/twig-bundle": "^7.2"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/shrikeh/common-app"
    }
  ],
  "autoload": {
    "psr-4": {
      "Shrikeh\\ApiContext\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Api\\": "tests/api/src"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "infection/extension-installer": true,
      "phpstan/extension-installer": true,
      "symfony/flex": true,
      "symfony/runtime": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    },
    "symfony": {
      "config-dir": "./tests/api/config",
      "public-dir": "./tests/api/public",
      "src-dir": "./tests/api/src",
      "var-dir": "./build/var"
    }
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    }
  }
}
